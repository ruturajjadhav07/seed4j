export type HealthStatus = 'UP' | 'DOWN' | 'UNKNOWN' | 'OUT_OF_SERVICE';

export type HealthKey =
  | 'discoveryComposite'
  | 'refreshScope'
  | 'clientConfigServer'
  | 'hystrix'
  | 'diskSpace'
  | 'mail'
  | 'ping'
  | 'livenessState'
  | 'readinessState'
  | 'db';

export interface HealthModel {
  status: HealthStatus;
  components: Record<HealthKey, { status: HealthStatus; details?: object }>;
}

export interface HealthDetails {
  key: HealthKey;
  status: HealthStatus;
  details?: object;
}
