export const isWindow = () => typeof globalThis !== 'undefined';

export const isLocalStorageEnabled = () => isWindow() && globalThis.localStorage;

export const getLocalStorage = (key: string) => isLocalStorageEnabled() && globalThis.localStorage.getItem(key);

export const setLocalStorage = (key: string, value: string) => isLocalStorageEnabled() && globalThis.localStorage.setItem(key, value);

export const removeLocalStorage = (key: string) => isLocalStorageEnabled() && globalThis.localStorage.removeItem(key);
